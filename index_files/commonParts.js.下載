(function($){
    $.fn.headerCarrent = function(menu, subMenu){
        var $carrentMenu =  $(this).children('.' + menu)
        $carrentMenu.addClass('current');

        $carrentMenu.find('.' + subMenu).addClass('current');
    }
})(jQuery);


